let currentWord="";
let players=[],imposters=[];

function pickImposters(count){imposters=[];if(count>=players.length){for(let i=0;i<players.length;i++) imposters.push(i);return;} while(imposters.length<count){let r=Math.floor(Math.random()*players.length);if(!imposters.includes(r)) imposters.push(r);}}

function startWord(){players=document.getElementById('players').value.split('\n').filter(x=>x);pickImposters(+document.getElementById('imposters').value);let currentGenre=document.getElementById('genreSelect').value;if(currentGenre==="chaos"){const allWords=[].concat(...Object.values(genres));currentWord=allWords[Math.floor(Math.random()*allWords.length)];} else{const list=genres[currentGenre];currentWord=list[Math.floor(Math.random()*list.length)];} showPlayers();}

function showPlayers(){let html="";players.forEach((p,i)=>html+=`<button class='player-btn' onclick='reveal(${i})'>${p}</button>`);document.getElementById('plist').innerHTML=html;go('playerList');}

function reveal(i){go('reveal');if(imposters.includes(i)){document.getElementById('card').style.textShadow='0 0 20px red';document.getElementById('card').innerHTML="‚ùì IMPOSTER ‚ùì";} else {document.getElementById('card').style.textShadow='0 0 20px cyan';document.getElementById('card').innerHTML="WORD:<br><b>"+currentWord+"</b>";}}
function back(){go('playerList');}

const canvas=document.getElementById('fogCanvas');const ctx=canvas.getContext('2d');canvas.width=window.innerWidth;canvas.height=window.innerHeight;let fogParticles=[];for(let i=0;i<100;i++){fogParticles.push({x:Math.random()*canvas.width,y:Math.random()*canvas.height,radius:Math.random()*100+50,speed:Math.random()*0.2+0.05})} function drawFog(){ctx.clearRect(0,0,canvas.width,canvas.height);fogParticles.forEach(p=>{ctx.beginPath();ctx.arc(p.x,p.y,p.radius,0,2*Math.PI);ctx.fillStyle='rgba(50,0,70,0.05)';ctx.fill();p.x+=p.speed;if(p.x>canvas.width)p.x=0;});requestAnimationFrame(drawFog);} drawFog();
</script>
